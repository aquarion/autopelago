upstream container-php5 { server 127.0.0.1:4080; }
server {
  listen      80;
  server_name imperial.istic.net altru.istic.net ark.ludo.istic.net live.art.istic.net material.istic.net;
  location    / {
    proxy_pass  http://container-php5;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-For $remote_addr;
  }
}

server {
    listen              443 ssl;
    server_name imperial.istic.net altru.istic.net ark.ludo.istic.net live.art.istic.net material.istic.net;
    ssl_certificate /etc/letsencrypt/live/www.aquarionics.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/www.aquarionics.com/privkey.pem;

  location    / {
    proxy_pass  http://container-php5;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header X-Forwarded-Proto $scheme;
  }
}
