upstream container-wordpress { server 127.0.0.1:2080; }
server {
  listen      80;
  server_name www.aquarionics.com aquarionics.com factionfiction.net www.factionfiction.net blogs.water.gkhs.net *.blogs.water.gkhs.net;
  location    / {
    proxy_pass  http://container-wordpress;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-For $remote_addr;
  }
}

server {
    listen              443 ssl;
    server_name www.aquarionics.com aquarionics.com factionfiction.net www.factionfiction.net blogs.water.gkhs.net *.blogs.water.gkhs.net;
    ssl_certificate /etc/letsencrypt/live/www.aquarionics.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/www.aquarionics.com/privkey.pem;

  location    / {
    proxy_pass  http://container-wordpress;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header X-Forwarded-Proto $scheme;
  }
}
