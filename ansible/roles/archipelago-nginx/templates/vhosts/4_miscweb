upstream container-php { server 127.0.0.1:4080; }
server {
  listen      80;
  listen [::]:80;
  server_name imperial.istic.net altru.istic.net ark.ludo.istic.net live.art.istic.net material.istic.net warehousebasement.com dagon.church live.dagon.church wiki.dagon.church archipelago.water.gkhs.net casu.istic.net wildfeathers.casu.istic.net istic.casu.istic.net hol.istic.net diaspora.foip.me old.aquarionics.com clockworkcircus.zone bless.ojaqs.foip.me ojaqs.foip.me ludoistic.com sevenmirrors.foip.me istic.co optim.istic.net; 
  
  return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name imperial.istic.net altru.istic.net ark.ludo.istic.net live.art.istic.net material.istic.net warehousebasement.com dagon.church live.dagon.church wiki.dagon.church archipelago.water.gkhs.net casu.istic.net wildfeathers.casu.istic.net istic.casu.istic.net hol.istic.net diaspora.foip.me old.aquarionics.com clockworkcircus.zone bless.ojaqs.foip.me ojaqs.foip.me ludoistic.com sevenmirrors.foip.me istic.co optim.istic.net; 
    include /etc/nginx/snippets/letsencrypt.conf;

  location    / {
    proxy_pass  http://container-php;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header X-Forwarded-Proto $scheme;
  }
  include /etc/nginx/snippets/errors.conf;
}

server {
    listen              443 ssl;
    listen              80;
    server_name istic.network www.istic.co www.istic.network www.istic.net istic.net;
    return 301 $scheme://istic.co;
}

server {
    listen              443 ssl;
    listen              80;
    server_name ludo.istic.co www.ludoistic.com ludoistic.net www.ludoistic.net;
    return 301 $scheme://ludoistic.com;
}
