upstream container-wordpress { server 127.0.0.1:2080; }

server {
    listen              443 ssl;
    listen              80;
    server_name herodiaries.blogs.water.gkhs.net
    return 301 $scheme://herodiaries.foip.me;
}

server {
    listen              443 ssl;
    listen              80;
    server_name istic.co istic.network www.istic.co www.istic.network www.istic.net;
    return 301 $scheme://istic.net;
}

server {
    listen      80;
    listen [::]:80;
    server_name istic.net wywo.aquarionics.com www.aquarionics.com factionfiction.net blogs.water.gkhs.net *.blogs.water.gkhs.net omnyom.com www.cleartextcontent.co.uk herodiaries.foip.me themonthlymoon.com idlespeculation.foip.me;
    return 301 https://$host$request_uri;
    include /etc/nginx/snippets/errors.conf;
    client_max_body_size 32M;
}

server {
    listen              443 ssl;
    listen              80;
    server_name herodiaries.blogs.water.gkhs.net
    return 301 $scheme://herodiaries.foip.me;
}

server {
    listen              80;
    server_name live.aquarionics.com;

    location    / {
        proxy_pass  http://container-wordpress;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host www.aquarionics.com;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    include /etc/nginx/snippets/errors.conf;
    client_max_body_size 32M;
}


server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name istic.net wywo.aquarionics.com www.aquarionics.com factionfiction.net blogs.water.gkhs.net *.blogs.water.gkhs.net omnyom.com www.cleartextcontent.co.uk herodiaries.foip.me themonthlymoon.com idlespeculation.foip.me;
    include /etc/nginx/snippets/letsencrypt.conf;

  location    / {
    proxy_pass  http://container-wordpress;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header X-Forwarded-Proto $scheme;
  }
  include /etc/nginx/snippets/errors.conf;
   client_max_body_size 32M;
}
