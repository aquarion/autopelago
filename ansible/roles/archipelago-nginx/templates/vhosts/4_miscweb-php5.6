upstream container-php5 { server 127.0.0.1:4080; }
server {
  listen      80;
  server_name imperial.istic.net altru.istic.net ark.ludo.istic.net live.art.istic.net material.istic.net warehousebasement.com dagon.church archipelago.water.gkhs.net;
  location    / {
    proxy_pass  http://container-php5;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-For $remote_addr;
  }
  include /etc/nginx/snippets/errors.conf;
}

server {
    server_name www.warehousebasement.com;
    return 301 $scheme://warehousebasement.com$request_uri;
}

server {
    listen              443 ssl;
    server_name imperial.istic.net altru.istic.net ark.ludo.istic.net live.art.istic.net material.istic.net warehousebasement.com dagon.church archipelago.water.gkhs.net;
    ssl_certificate {{ letsencrypt_dir }}/fullchain.pem;
    ssl_certificate_key {{ letsencrypt_dir }}/privkey.pem;
    ssl_session_cache    shared:SSL:1m;
    ssl_session_timeout  10m;

  location    / {
    proxy_pass  http://container-php5;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header X-Forwarded-Proto $scheme;
  }
  include /etc/nginx/snippets/errors.conf;
}
