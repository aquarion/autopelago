upstream container-larpme { server 127.0.0.1:6080; }
upstream container-larpme-ssl { server 127.0.0.1:6443; }
server {
  listen      80;
  server_name larp.me api.larp.me;
  location    / {
    proxy_pass  http://container-larpme;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-For $remote_addr;
  }
  include /etc/nginx/snippets/errors.conf;
}

server {
    listen              443 ssl;
    server_name larp.me api.larp.me;
    ssl_certificate  /home/aquarion/srv/larpme/code/localconfig/ssl/comodo/larp_me.crt;
    ssl_certificate_key  /home/aquarion/srv/larpme/code/localconfig/ssl/comodo/server.key;
    
    ssl_session_cache    shared:SSL:1m;
    ssl_session_timeout  10m;

  location    / {
    proxy_ssl_session_reuse off;
    proxy_pass  http://container-larpme;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header X-Forwarded-Proto $scheme;
  }
  include /etc/nginx/snippets/errors.conf;
}
