upstream container-pdforum { server 127.0.0.1:3080; }
server {
  listen      80;
  server_name forums.profounddecisions.co.uk pdforums.larp.me.uk;
  location    / {
    proxy_pass  http://container-pdforum;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-For $remote_addr;
  }
} 

server {
    listen              443 ssl;
    server_name forums.profounddecisions.co.uk pdforums.larp.me.uk;
    ssl_certificate /etc/letsencrypt/live/aquarionics.blogs.water.gkhs.net/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/aquarionics.blogs.water.gkhs.net/privkey.pem;

  location    / {
    proxy_pass  http://container-pdforum;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-For $remote_addr;
    proxy_set_header X-Forwarded-Proto $scheme;
  }
}

